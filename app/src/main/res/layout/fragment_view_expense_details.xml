<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:orientation="vertical"
    tools:context="com.ats.blucatch.fragment.ViewExpenseDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c4c3c3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvExpDetails_LabelDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1.9"
                android:background="@drawable/custom_layout_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="Date"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvExpDetails_LabelTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1.4"
                android:background="@drawable/custom_layout_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="Exp. Title"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvExpDetails_LabelAmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/custom_layout_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="Amount"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:background="@drawable/custom_layout_border"
                android:gravity="center_horizontal|center_vertical"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvExpDetails_Date1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1.9"
                android:background="@color/colorWhite"
                android:paddingLeft="2dp"
                android:text="25/05/2017"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvExpDetails_Title1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1.4"
                android:background="@color/colorWhite"
                android:paddingLeft="2dp"
                android:text="Transaction sdfsdfdsfdsf sdfdsfdsfds sdfds"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvExpDetails_Amt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:paddingLeft="2dp"
                android:text="5000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:background="@color/colorWhite"
                android:gravity="center_horizontal"
                android:text="Dr"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

