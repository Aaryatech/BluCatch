<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/tvLayoutTripSettle_SrNo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLayoutTripSettle_ToAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="sdfdsfdsfdsfdsfds fdsfsdfsdfsdfsdfdsf gdsfdsgf"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLayoutTripSettle_Type"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Cash"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvLayoutTripSettle_Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5000003"
            android:textSize="15sp" />


    </TableRow>

</LinearLayout>